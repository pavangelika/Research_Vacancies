{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["items", "page", "pages", "per_page"],
  "properties": {
    "page": {
      "type": "integer",
      "minimum": 0
    },
    "pages": {
      "type": "integer",
      "minimum": 1
    },
    "per_page": {
      "type": "integer",
      "minimum": 1
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "alternate_url"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "alternate_url": {
            "type": "string",
            "format": "uri"
          },
          "salary": {
            "type": ["object", "null"],
            "properties": {
              "from": { "type": ["number", "null"] },
              "to": { "type": ["number", "null"] },
              "currency": { "type": "string" }
            }
          },
          "employer": {
            "type": "object",
            "required": ["id", "name"],
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" }
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
